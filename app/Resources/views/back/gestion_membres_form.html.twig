

<div id="modal-member" class="modal" style="max-height: 80%" data-path="{{ path('gestion_membres_form') }}">
    <div class="modal-content">
        <h1>Détails du compte</h1>
        <div class="row">
            <div class="col m3 s6 pm" style="text-align: right; ">
                <p>Nom : </p>
                <p>Pseudo :  </p>
                <p>Date de naissance :  </p>
                <p>Observations :  </p>
            </div>
            <div class="col m3 s6">
                <p id="name"> {{ user.name }}</p>
                <p id="pseudo"> {{ user.pseudo }}</p>
                <p id="birth"> {{ user.birthDate|date('d/m/Y') }}</p>
                <p id="observations">{{ user.observations|length }}</p>
            </div>
            <div class="col m3 s6 pm" style="text-align: right;">
                <p>Prénom :  </p>
                <p>Email : </p>
                <p>Date d'inscription :  </p>
                <p>Observations validées :   </p>
            </div>
            <div class="col m3 s6">
                <p id="firstname"> {{ user.firstName }}</p>
                <p id="email">  {{ user.username }}</p>
                <p id="inscription">{{ user.dateRegistration|date('d/m/Y') }}</p>
                <p id="obsvalid">{{ obsValid }}</p>
            </div>
        </div>

        <p class="col s12" style="border-bottom: 1px solid black"></p>

        <div class="row" >
            <div class="col s5 pm" style="text-align: right">
                <p>Statut : </p>
                <p>Adhérent de l'association :</p>
                <p>Type de compte : </p>
                <p>Justificatif : </p>
            </div>

            <div class="col s7">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id' : 'form_m'}} ) }}
                <p id="statut"> {% if (user.validMail == false) %} Email non validé {% else %} Compte validé {% endif %} </p>
                <p id="member"> {{ form_widget(form.member) }}</p>
                <p id="account">  {{ form_widget(form.account) }}</p>
                <p id="justificatif">{% if user.justificatif %} <a href="{{ path('download_justificatory', { 'justificatif' : user.justificatif.id } ) }}" id="download-justificatory">Télecharger le justificatif</a> {% else %} Pas de justificatif {% endif  %}</p>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
    <div class="modal-footer row" style="font-size:10px"  >
        <button href="#!" type="submit" id="valid-member" class="modal-action modal-close waves-effect green waves-light btn col m3 s12" style="text-decoration: none" form="form_m"> <i class="tiny material-icons left">done</i>Valider les changements </button>
        <button href="#!" id="ask-for-another" data-path="{{ path('ask_another_justificatory') }}" class="modal-action modal-close waves-effect orange waves-light btn col m3 s12 offset-m1" style="text-decoration: none"> <i class="tiny material-icons left">loop</i>Redemander un justificatif</button>
        <button href="#!" id="delete-member" data-path="{{ path('gestion_membres_delete') }}" class="modal-action modal-close waves-effect red waves-light btn col m3 s12 offset-m1" style="text-decoration: none"> <i class="tiny material-icons left">not_interested</i>Supprimer le compte</button>
    </div>

    <div id="modal-photo" class="modal photo-preview">
        <div class="modal-content">
            <img id="photo-preview" class="responsive-img" src="">
        </div>
    </div>
</div>



{% extends "::layout.html.twig" %}

{% block content %}
    {% for message in app.session.flashBag.get('info') %}
        <div class="card-panel teal green accent-2 testFlash" style="text-align: center">
            {{  message }}
        </div>
    {% endfor %}
    <div class=" box-master row" >
        <div class="card col s12 m6 offset-m3 l4 offset-l4" style="padding-left:50px; padding-right: 50px; margin-top: 50px; margin-bottom: 100px;">
                <h1>Connexion</h1>
            {% if error %}
                <div id="colorErrorConnection">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="row">
                <form action="{{ path('login_check') }}" method="post" class="col s12">
                    <div class="input-field">
                        <input type="email" id="username" name="_username" value="{{ last_username }}" required />
                        <label for="username">Adresse e-mail</label>
                    </div>

                    <div class="input-field" style="margin-top: 40px">
                        <input type="password" id="password" name="_password" required/>
                        <label for="password">Mot de passe</label>
                    </div>

                    <div style="margin-top: 50px">
                        <input type="checkbox" id="remember_me" name="_remember_me" />
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>

                    <div style="margin-top: 30px" >
                        <button class="waves-effect waves-light  light-blue accent-4  btn col offset-s2 s8" role="button" id="submitConnexion"  type="submit" >Se connecter </button>
                        <a href="{{ path('recover_password') }}" class="col s12"  style="text-align: center; margin-top: 20px;"> Mot de passe oubli√© ?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


{% endblock %}

